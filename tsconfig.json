{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./lib",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "./src/**/*.spec.js",
    "./src/**/*.spec.ts"
  ]
}
