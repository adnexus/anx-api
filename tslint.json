{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "indent": [true, "tabs", 2],
    "max-classes-per-file": false,
    "max-line-length": false,
    "no-console": { "severity": "warning", "options": ["log"] },
    "no-empty-interface": false,
    "no-empty": false,
    "no-var-requires": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "quotemark": [true, "single", "jsx-single"],
    "array-type": { "severity": "error", "options": ["array-simple"] },
    "eofline": { "severity": "error" },
    "interface-name":  { "severity": "error", "options": ["always-prefix"] },
    "member-ordering": { "severity": "error", "options": ["public-before-private", "static-before-instance", "variables-before-functions"] },
    "no-duplicate-variable": { "severity": "error", "options": ["check-parameters"] },
    "no-shadowed-variable": { "severity": "error" },
    "no-switch-case-fall-through": { "severity": "error" },
    "no-use-before-declare": { "severity": "error" },
    "switch-default": { "severity": "error" },
    "typedef": { "severity": "error", "options": ["property-declaration"] },
    "variable-name": { "severity": "error", "options": ["ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"] },
    "whitespace": { "severity": "error", "options": ["check-branch", "check-decl", "check-module", "check-operator", "check-separator", "check-type", "check-typecast"] }
  }
}
